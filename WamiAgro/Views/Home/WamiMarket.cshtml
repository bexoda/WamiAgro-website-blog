@{
    ViewData["Title"] = "WamiMarket";
}

<!--====== PAGE TITLE PART START ======-->
<section class="page-title-area bg_cover d-flex align-items-center" style="background-image: url('/assets/images/page-bg.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title-content text-white ">
                    <h3 class="title">Wami Market</h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-white">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Wami Market</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!--====== PAGE TITLE PART ENDS ======-->
<!--====== ABOUT US PART START ======-->
<section id="about" class="about-us-3-area pb-130">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left Column: Image Slider -->
            <!-- Right Column: Content -->
            <div class="col-lg-12 col-md-8">
                <div class="about-us-content">
                    <h3 class="title">About WamiMarket</h3>
                    <p>
                        WamiMarket is an online platform that allows aggregators to display their available produce while providing quality specifications, enabling transparent and instant transactions. Through WamiMarket, field agents and aggregators are equipped with a real-time digital market and inventory management platform, empowering them to manage their operations efficiently. This innovative solution creates a dynamic marketplace, fostering seamless stakeholder collaboration and engagement.
                    </p>
                    <ul>
                        <li><i class="far fa-check-circle"></i> Comodities</li>
                        <li><i class="far fa-check-circle"></i> Purchase Orders</li>
                        <li><i class="far fa-check-circle"></i> Reporting and Analysis</li>
                        <li><i class="far fa-check-circle"></i> Voice Messages, etc</li>
                    </ul>
                    <a class="btn btn-primary" href="https://pukpara.com/auth/sign-in">
                        Go To <b>Wami</b> Market <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--====== ABOUT US PART ENDS ======-->
<!--====== FEATURES PART START ======-->
<section id="features" class="features-area bg-light pt-100 pb-100">
    <div class="container">
        <div class="row justify-content-center mb-50">
            <div class="col-lg-8 col-md-10 text-center">
                <div class="section-title">
                    <h3 class="title">Features of the Platform</h3>
                    <p>Discover the comprehensive tools designed to support and grow your farming operations.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Feature 1: Commodities -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-item text-center p-4 border rounded h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-tractor fa-2x text-success"></i>
                    </div>
                    <h5 class="feature-title">Commodities</h5>
                    <p class="feature-description">
                        Users can browse different commodities to view quantities, locations, and prices.
                    </p>
                </div>
            </div>
            <!-- Feature 2: Purchase Orders -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-item text-center p-4 border rounded h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shopping-cart fa-2x text-success"></i>
                    </div>
                    <h5 class="feature-title">Purchase Orders</h5>
                    <p class="feature-description">
                        Users can purchase single or multiple commodities and select the address for delivery.
                    </p>
                </div>
            </div>
            <!-- Feature 3: Reporting and Analytics -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-item text-center p-4 border rounded h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-chart-line fa-2x text-success"></i>
                    </div>
                    <h5 class="feature-title">Reporting and Analytics</h5>
                    <p class="feature-description">
                        Dashboards and reporting tools provide insights into various metrics within the platform.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<!--====== FEATURES PART ENDS ======-->
<!--====== ADDITIONAL SERVICES PART START ======-->
<section id="additional-services" class="additional-services-area pt-100 pb-100">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Added justify-content-center -->
            <!-- Voice Messaging -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="service-item p-4 border rounded h-100 text-center">
                    <!-- Added text-center -->
                    <div class="service-icon mb-3">
                        <i class="fas fa-headset fa-2x text-primary"></i>
                    </div>
                    <h5 class="service-title">Voice Messaging</h5>
                    <p class="service-description">
                        The voice messaging system is equipped with Voice over Internet Protocol (VoIP) technology disseminating crucial weather information to farmers. Farmers receive high-quality voice messages in their local dialects, to overcome language or literacy limitations. Access to real-time weather updates empowers farmers to make informed decisions about their agricultural activities, helping them adapt to changing climatic conditions and mitigate risks.
                    </p>
                </div>
            </div>

            <!-- Marketplace -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="service-item p-4 border rounded h-100 text-center">
                    <!-- Added text-center -->
                    <div class="service-icon mb-3">
                        <i class="fas fa-store fa-2x text-primary"></i>
                    </div>
                    <h5 class="service-title">Marketplace</h5>
                    <p class="service-description">
                        This feature empowers field agents and aggregators by providing them with a real-time platform for market and inventory management. Aggregators showcase available produce with quality specifications, allowing for transparent and immediate transactions. This system offers a dynamic marketplace that fosters collaboration and engagement among stakeholders.
                    </p>
                </div>
            </div>

            <!-- (Optional) Add a third empty column for better centering on larger screens -->
            <!--
            <div class="col-lg-4 col-md-6 mb-4"></div>
            -->
        </div>
    </div>
</section>
<!--====== ADDITIONAL SERVICES PART ENDS ======-->
<!--====== COMPONENT STYLES ======-->
<style>
    /*====== ABOUT US SECTION ======*/
    #about .about-us-content .title {
        font-size: 2rem;
        color: #28a745; /* Green color for title */
        margin-bottom: 20px;
    }

    #about .about-us-content p {
        font-size: 1rem;
        color: #555;
        margin-bottom: 20px;
    }

    #about .about-us-content ul {
        list-style: none;
        padding: 0;
        margin-bottom: 20px;
    }

        #about .about-us-content ul li {
            margin-bottom: 10px;
            font-size: 1rem;
            color: #555;
            display: flex;
            align-items: center;
        }

            #about .about-us-content ul li i {
                color: #28a745;
                margin-right: 10px;
            }

    /*====== FEATURES SECTION ======*/
    .features-area .section-title .title {
        font-size: 2rem;
        color: #333;
        margin-bottom: 15px;
    }

    .features-area .section-title p {
        font-size: 1rem;
        color: #666;
    }

    .features-area .feature-item {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .features-area .feature-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        }

    .features-area .feature-title {
        font-size: 1.25rem;
        color: #333;
        margin-bottom: 10px;
    }

    .features-area .feature-description {
        font-size: 0.95rem;
        color: #666;
    }

    /*====== ADDITIONAL SERVICES SECTION ======*/
    .additional-services-area .service-item {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .additional-services-area .service-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        }

    .additional-services-area .service-title {
        font-size: 1.25rem;
        color: #333;
        margin-bottom: 10px;
    }

    .additional-services-area .service-description {
        font-size: 0.95rem;
        color: #666;
    }

    /*====== CALL TO ACTION SECTION ======*/
    .cta-area .title {
        font-size: 2rem;
        color: #fff;
        margin-bottom: 20px;
    }

    .cta-area .btn {
        font-size: 1rem;
        padding: 12px 25px;
        border-radius: 25px;
    }

    /*====== RESPONSIVE STYLES ======*/
    @@media (max-width: 768px) {
        #about .about-us-content {
            text-align: center;
        }
    }

    @@media (max-width: 576px) {
        .features-area .feature-item,
        .additional-services-area .service-item {
            text-align: center;
        }

            .features-area .feature-item .feature-icon,
            .additional-services-area .service-item .service-icon {
                justify-content: center;
            }
    }
</style>
<!--====== COMPONENT STYLES ENDS ======-->
