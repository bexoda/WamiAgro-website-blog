<!-- Custom CSS for What We Do Section -->
<style>
    /* Ensure all service images have the same dimensions */
    .services-image {
        width: 100%; /* Ensures all images fill the container */
        height: 250px; /* Uniform height */
        object-fit: cover; /* Ensures images cover the area without distortion */
    }

    .services-item {
        padding: 15px; /* Adds padding around each service box */
        margin-bottom: 20px; /* Spacing between each service box */
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
        transition: transform 0.3s ease-in-out; /* Smooth transition for hover effect */
        background-color: #fff; /* Set background color */
        border-radius: 8px; /* Rounded corners */
    }

        .services-item:hover {
            transform: translateY(-5px); /* Slight raise effect on hover */
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2); /* Enhanced shadow on hover */
        }

    .services-content h4 {
        margin-top: 10px; /* Space above the title */
        margin-bottom: 10px; /* Space below the title */
    }

    .services-content p {
        min-height: 60px; /* Ensures text area is uniform */
    }

    .read-more-link {
        margin-top: 10px; /* Space above the read more link */
        display: inline-block;
        color: #007bff; /* Link color */
        text-decoration: none;
    }

        .read-more-link:hover {
            text-decoration: underline; /* Underline on hover */
        }

    /* Modal Image Styling */
    .modal-body img {
        max-width: 100%;
        height: auto;
        margin-bottom: 15px;
    }

    /* Optional: Center align the breadcrumb */
    .breadcrumb {
        background: transparent;
        padding: 0;
        margin-top: 15px;
    }

    /* Custom CSS for About Info Section */
    .about-info-area .about-info-content {
        /* Center the text on small screens and align left on large screens */
        text-align: center;
    }

    @@media (min-width: 992px) {
        .about-info-area .about-info-content {
            text-align: left;
        }
    }

    .about-info-area .about-info-content p {
        /* Justify text on all screen sizes */
        text-align: justify;
    }

    .about-info-area .about-info-content .title {
        /* Align the heading to the left */
        text-align: left;
        margin-bottom: 20px; /* Adds space below the heading */
    }

    /* Optional: Add spacing and styling to the "What we do" span */
    .about-info-area .about-info-content span {
        display: block;
        font-size: 16px;
        color: #71b85f; /* Adjust color as per your theme */
        margin-bottom: 10px;
        font-weight: 600;
    }
</style>
