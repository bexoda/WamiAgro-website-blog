<script>
    $(document).ready(function () {
        $('.view-profile-btn').on('click', function () {
            // Retrieve data attributes from the clicked button
            var name = $(this).data('name');
            var title = $(this).data('title');
            var qualifications = $(this).data('qualifications');
            var experience = $(this).data('experience');
            var linkedin = $(this).data('linkedin');
            var imageSrc = $(this).data('image');

            // Update modal content
            $('#teamModalLabel').text(name);
            $('#modalImage').attr('src', imageSrc).attr('alt', name);
            $('#modalName').text(name);
            $('#modalTitle').text(title);
            $('#modalQualifications').text(qualifications);
            $('#modalExperience').text(experience);
            if (linkedin !== "#") {
                $('#modalLinkedIn').attr('href', linkedin).show();
            } else {
                $('#modalLinkedIn').hide();
            }
        });
    });
</script>

<style>
    /* Existing Styles */
    .section-title {
        margin-bottom: 40px;
    }

    .farmers-item {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
        height: 350px; /* Adjust height as needed */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .farmers-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.2);
        }

    .farmers-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        color: #fff;
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .farmers-item:hover .farmers-overlay {
        opacity: 1;
    }

    .farmers-overlay .item {
        text-align: center;
    }

        .farmers-overlay .item .title {
            font-size: 1.2rem;
            margin-bottom: 5px;
        }

        .farmers-overlay .item span {
            display: block;
            margin-bottom: 10px;
            font-size: 1rem;
            color: #ccc;
        }

        .farmers-overlay .item ul {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: center;
            margin-bottom: 10px;
        }

            .farmers-overlay .item ul li {
                margin: 0 5px;
            }

                .farmers-overlay .item ul li a {
                    color: #fff;
                    font-size: 1rem;
                    transition: color 0.3s ease;
                }

                    .farmers-overlay .item ul li a:hover {
                        color: #27ae60;
                    }

    .view-profile-btn {
        background-color: #27ae60;
        border: none;
        color: #fff;
        padding: 8px 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .view-profile-btn:hover {
            background-color: #219150;
        }

    /* Modal Styles */
    .modal-content {
        border-radius: 10px;
    }

    .modal-header {
        border-bottom: none;
    }

        .modal-header .close {
            font-size: 1.5rem;
            color: #000;
        }

    .modal-body img {
        max-width: 100%;
        border-radius: 10px;
    }

    @@media (max-width: 767px) {
        .farmers-overlay .item {
            text-align: center;
        }
    }
</style>
