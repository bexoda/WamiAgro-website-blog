    <style>
        /* Reset default styles for navigation */
        .customHeader {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            background-color: #02060e;
            position: relative;
            width: 100%;
        }

            .customHeader .logo img {
                max-height: 50px;
            }

            /* Navigation styles */
            .customHeader .navbar {
                display: flex;
                align-items: center;
            }

            .customHeader .navbar-links {
                display: flex;
                list-style: none;
                margin: 0;
                padding: 0;
            }

            .customHeader .nav-item {
                position: relative;
                margin-left: 1.5rem;
            }

                .customHeader .nav-item a {
                    color: white;
                    text-decoration: none;
                    font-size: 16px;
                    display: block;
                    padding: 0.5rem 0;
                }

            /* Submenu styles */
            .customHeader .sub-menu {
                display: none;
                position: absolute;
                top: 100%;
                left: 0;
                background-color: #02060e;
                padding: 1rem;
                min-width: 200px;
                z-index: 1000;
                list-style: none;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }

            .customHeader .nav-item:hover .sub-menu {
                display: block;
            }

            /* Mobile menu button */
            .customHeader .hamburgerMenu {
                display: none;
                background: none;
                border: none;
                cursor: pointer;
                padding: 0.5rem;
            }

            .customHeader .toggler-icon {
                display: block;
                width: 25px;
                height: 2px;
                background-color: white;
                margin: 5px 0;
                transition: 0.3s;
            }

        /* Responsive styles */
        @@media only screen and (max-width: 768px) {
            .customHeader .hamburgerMenu {
                display: block;
            }

            .customHeader .pcNav {
                display: none;
                position: absolute;
                top: 100%;
                left: 0;
                right: 0;
                background-color: #02060e;
                padding: 1rem;
                z-index: 1000;
            }

                .customHeader .pcNav.show {
                    display: block !important;
                }

            .customHeader .navbar-links {
                flex-direction: column;
            }

            .customHeader .nav-item {
                margin: 0;
            }

            .customHeader .sub-menu {
                position: static;
                display: none;
                padding-left: 1rem;
                box-shadow: none;
            }

            .customHeader .nav-item.active .sub-menu {
                display: block;
            }
        }
    </style>
</head>

