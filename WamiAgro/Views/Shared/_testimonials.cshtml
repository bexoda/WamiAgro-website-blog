<!-- jQuery and Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

<script>
    $(document).ready(function () {
        // Sync Tabs with Carousel
        $(".testimonial .tabs li").click(function () {
            var index = $(this).data('slide-to');
            $('#carouselExampleIndicators').carousel(index);
        });

        // Update Active Tab on Carousel Slide
        $('#carouselExampleIndicators').on('slide.bs.carousel', function (e) {
            var index = $(e.relatedTarget).index();
            $(".testimonial .tabs li").removeClass('active');
            $(".testimonial .tabs li").eq(index).addClass('active');
        });

        // Optional: Add keyboard accessibility
        $(".testimonial .tabs li").keypress(function (e) {
            if (e.key === 'Enter' || e.key === ' ') {
                $(this).click();
            }
        });
    });
</script>
