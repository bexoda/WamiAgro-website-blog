@* Partial View: Services.cshtml *@

@* Include Bootstrap CSS and Icons *@
<link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

@* Include Custom CSS *@
<style>
    /* Custom Green Color */
    .custom-green {
        color: #6cbe03 !important;
    }

    .custom-green-border {
        border-bottom: 3px solid #6cbe03 !important;
    }

    .custom-green-link {
        color: #6cbe03 !important;
    }

        .custom-green-link:hover {
            color: #558e02 !important; /* Darker shade for hover effect */
            text-decoration: underline;
        }

    /* Ensure all cards have equal heights */
    .services-item {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    /* Flexbox for equal heights */
    .services-card-body {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        /* Adjust the paragraph to grow and fill space */
        .services-card-body p {
            flex-grow: 1;
        }

    /* Adjust icon size and color */
    .services-icon {
        font-size: 56px;
        color: #6cbe03;
    }

    /* Ensure the section title uses the custom green */
    .section-title .fs-6 {
        color: #6cbe03;
    }

</style>

<section class="bg-light py-5 py-xl-8">
    <div class="container">
        <!-- Section Title -->
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-7">
                <h2 class="title">Our Services</h2>

                <hr class="w-50 mx-auto mb-5 mb-xl-9 border-dark-subtle">
            </div>
        </div>
    </div>

    <div class="container overflow-hidden w-100 text-justify">
        <!-- Center the cards -->
        <div class="row gy-4 gy-xl-0 justify-content-center align-items-stretch"  style="display: flex; flex-direction: column;">
            <!-- Service Card: Wami Market -->
            <div class="col-12 col-sm-6 col-xl-3 w-100">
                <div class="card h-100 border-0 border-bottom custom-green-border shadow-sm">
                    <div class="card-body text-center  justify-content-between p-xxl-5 d-flex flex-md-row services-card-body flex-sm-column" >
                        <!-- Icon -->
                        <div class="m-md-auto container">
                        <img src="@Url.Content("~/assets/images/pukpara/pukpara.png")" alt="">
                        </div>
                        @* <i class="bi bi-shop services-icon mb-4"></i> *@
                        <div class="m-md-auto">
                                <h4 class="mb-4 custom-green">Wami Market</h4>
                            <p class="mb-4 text-secondary flex-grow-1 text-justify px-lg-5 px-md-3 px-sm-1">
                                WamiAgro provides reliable market access with fair prices by buying from various smallholders and selling in bulk to factories, distributors and retailers local and export. Our customers receive a fully traceable product that is grown with biodiverse, regenerative methods that enrich local environments.   
                                </p>
                            <a asp-controller="Home" asp-action="WamiMarket" class="fw-bold text-decoration-none custom-green-link mt-auto">
                                Learn More
                                <i class="bi bi-arrow-right-short"></i>
                            </a>
                        </div>
                        
                    </div>
                </div>
            </div>

            <!-- Service Card: Wami Credit -->
            <div class="col-12 col-sm-6 col-xl-3 w-100">
                <div class="card h-100 border-0 border-bottom custom-green-border shadow-sm">
                    <div class="card-body text-center p-4 p-xxl-5 d-flex justify-content-between flex-sm-column flex-md-row-reverse  services-card-body">
                        <!-- Icon -->
                        @* <i class="bi bi-credit-card services-icon mb-4"></i> *@


                        <div class="m-md-auto container">
                            <img src="@Url.Content("~/assets/images/pukpara/wami-credit.jpg")" alt="Wami Credit" style="border-radius: 5px;">
                        </div>
                        <div class="m-md-auto container">
                            
                        <h4 class="mb-4 custom-green">Wami Credit</h4>
                        <p class="mb-4 text-secondary flex-grow-1 text-justify px-lg-5 px-md-3 px-sm-1">
                            We supply farmers with seeds, fertilizer and mechanization services for production on credit to be paid during harvest.   WamiAgro takes repayment of this input credit via the commercial sales of a farmer’s crop. 
                        </p>
                        @* <a asp-controller="Home" asp-action="WamiCredit" class="fw-bold text-decoration-none custom-green-link mt-auto">
                            Learn More
                            <i class="bi bi-arrow-right-short"></i>
                        </a> *@
                        </div>
                    </div>
                </div>
            </div>

            <!-- Service Card: Wami Info -->
            <div class="col-12 col-sm-6 col-xl-3 w-100 m-sm-auto align-items-center">
                <div class="card h-100 border-0 w-100 border-bottom custom-green-border shadow-sm">
                    <div class="card-body text-center p-xxl-5 d-flex flex-md-row justify-content-between m-sm-auto services-card-body flex-sm-column">
                        <!-- Icon -->
                        <div class="m-md-auto container">
                            <img src="@Url.Content("~/assets/images/pukpara/wami-info.png")" alt="Wami Info" style="border-radius: 5px;">
                        </div>
                        @* <i class="bi bi-info-circle services-icon mb-4"></i> *@
                        <div class="container m-md-auto">
                           <h4 class="mb-4 custom-green">Wami Info</h4>
                        <p class="mb-4 text-secondary flex-grow-1 text-justify px-lg-5 px-md-3 px-sm-1">We provide capacity building for farmers through a series of Good Agricultural Practices (GAP) training, financial literacy training and also provide important weather updates in local dialects to farmers to help improve their long-term resilience, even in changing climates.</p>
                        @* <a asp-controller="Home" asp-action="WamiInfo" class="fw-bold text-decoration-none custom-green-link mt-auto">
                            Learn More
                            <i class="bi bi-arrow-right-short"></i>
                        </a>  *@
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
