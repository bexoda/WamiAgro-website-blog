<!-- Include Bootstrap CSS and Icons -->
<link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<section class="bg-light py-5 py-xl-8">
    <div class="container">
        <!-- Section Title -->
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-7">
                <h3 class="fs-6 mb-2 text-secondary text-center text-uppercase">Our Services</h3>
                
                <hr class="w-50 mx-auto mb-5 mb-xl-9 border-dark-subtle">
            </div>
        </div>
    </div>

    <div class="container overflow-hidden">
        <!-- Center the cards -->
        <div class="row gy-4 gy-xl-0 justify-content-center align-items-stretch">
            <!-- First Card: Wami Market -->
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card h-100 border-0 border-bottom border-success shadow-sm">
                    <div class="card-body text-center p-4 p-xxl-5 d-flex flex-column">
                        <!-- Icon -->
                        <i class="bi bi-shop text-success mb-4" style="font-size: 56px;"></i>
                        <h4 class="mb-4">Wami Market</h4>
                        <p class="mb-4 text-secondary flex-grow-1">Reliable market access with fair prices for your produce.</p>
                        <a asp-controller="Home" asp-action="WamiMarket" class="fw-bold text-decoration-none link-success mt-auto">
                            Learn More
                            <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Second Card: Wami Credit -->
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card h-100 border-0 border-bottom border-success shadow-sm">
                    <div class="card-body text-center p-4 p-xxl-5 d-flex flex-column">
                        <!-- Icon -->
                        <i class="bi bi-credit-card text-success mb-4" style="font-size: 56px;"></i>
                        <h4 class="mb-4">Wami Credit</h4>
                        <p class="mb-4 text-secondary flex-grow-1">Access seeds, fertilizer, and mechanization services on credit.</p>
                        <a asp-controller="Home" asp-action="WamiCredit" class="fw-bold text-decoration-none link-success mt-auto">
                            Learn More
                            <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Third Card: Wami Info -->
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card h-100 border-0 border-bottom border-success shadow-sm">
                    <div class="card-body text-center p-4 p-xxl-5 d-flex flex-column">
                        <!-- Icon -->
                        <i class="bi bi-info-circle text-success mb-4" style="font-size: 56px;"></i>
                        <h4 class="mb-4">Wami Info</h4>
                        <p class="mb-4 text-secondary flex-grow-1">Capacity building and vital information for resilient farming.</p>
                        <a asp-controller="Home" asp-action="WamiInfo" class="fw-bold text-decoration-none link-success mt-auto">
                            Learn More
                            <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
